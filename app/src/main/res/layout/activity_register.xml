<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@drawable/downwave"
                android:id="@+id/downwave"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo2" />

            <TextView
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="Register"
                android:textColor="@color/primary"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_one"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="10dp"
                android:drawableTint="@color/primary"
                android:hint="First Name"
                android:textColor="@color/primary"
                android:textColorHint="@color/primary_light"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/lName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_one"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="10dp"
                android:drawableTint="@color/primary"
                android:hint="Last Name"
                android:textColor="@color/primary"
                android:textColorHint="@color/primary_light"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_one"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="10dp"
                android:drawableTint="@color/primary"
                android:hint="Email"
                android:textColor="@color/primary"
                android:textColorHint="@color/primary_light"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_one"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="10dp"
                android:drawableTint="@color/primary"
                android:hint="Phone Number i.e 254..."
                android:inputType="phone"
                android:textColor="@color/primary"
                android:textColorHint="@color/primary_light"
                android:padding="15dp"
                android:textSize="14dp" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/studentButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:buttonTint="@color/primary"
                    android:text="Student"
                    android:textColor="@color/primary" />

                <RadioButton
                    android:id="@+id/residentButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:buttonTint="@color/primary"
                    android:text="Resident"
                    android:textColor="@color/primary" />

            </RadioGroup>

            <EditText
                android:id="@+id/admNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_one"
                android:drawableLeft="@drawable/ic_id_card"
                android:drawablePadding="10dp"
                android:hint="Student Admission Number"
                android:inputType="text"
                android:padding="15dp"
                android:textColor="@color/primary"
               android:drawableTint="@color/primary"
                android:textColorHint="@color/primary_light"
                android:textSize="14dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/idNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_one"
                android:drawableLeft="@drawable/ic_id_card"
                android:drawablePadding="10dp"
                android:drawableTint="@color/primary"
                android:hint="Identification Number"
                android:textColor="@color/primary"
                android:textColorHint="@color/primary_light"
                android:inputType="phone"
                android:padding="15dp"
                android:textSize="14dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_one"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="10dp"
                android:drawableTint="@color/primary"
                android:hint="Password"
                android:textColor="@color/primary"
                android:textColorHint="@color/primary_light"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/confirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_one"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="10dp"
                android:drawableTint="@color/primary"
                android:hint="Confirm Password"
                android:textColor="@color/primary"
                android:textColorHint="@color/primary_light"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textSize="14dp" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_one"
                android:drawableEnd="@drawable/ic_baseline_send_24"
                android:text="Submit"
                android:textAllCaps="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="You already have an account?"
                android:textColor="@color/primary"

                />

            <TextView
                android:id="@+id/goToLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Login"
                android:textColor="@color/primary" />

        </LinearLayout>


            <ImageView
                android:id="@+id/upwave"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:scaleType="fitXY"
                android:src="@drawable/upwave3" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>