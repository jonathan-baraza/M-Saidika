<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bar">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:background="@color/white">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_menu_24"
                android:id="@+id/openSideMenu"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bar"
        android:layout_marginTop="-50dp">


        <ImageView
            android:id="@+id/jobImage"
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:src="@drawable/job" />

        <TextView
            android:id="@+id/jobText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/jobImage"
            android:layout_marginLeft="10dp"
            android:text="Job Opportunities" />

        <ImageView
            android:id="@+id/transportImage"
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:src="@drawable/transport" />

        <TextView
            android:id="@+id/transportText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/transportImage"
            android:layout_alignParentRight="true"
            android:layout_marginRight="55dp"
            android:text="Transport Services" />

        <ImageView
            android:id="@+id/foodImage"
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:layout_alignTop="@+id/jobText"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:src="@drawable/food" />

        <TextView
            android:id="@+id/foodText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/foodImage"
            android:layout_marginLeft="10dp"
            android:text="Food Services" />

        <ImageView
            android:id="@+id/housingImage"
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:layout_alignTop="@id/transportText"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:src="@drawable/housing" />

        <TextView
            android:id="@+id/housingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/housingImage"
            android:layout_alignParentRight="true"
            android:layout_marginRight="55dp"
            android:text="Housing Services" />

        <ImageView
            android:id="@+id/sPImage"
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:layout_alignTop="@+id/foodText"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:src="@drawable/sp" />

        <TextView
            android:id="@+id/sPText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sPImage"
            android:layout_marginLeft="10dp"
            android:text="Service Provider" />

        <ImageView
            android:id="@+id/emergencyImage"
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:layout_alignTop="@id/housingText"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:src="@drawable/emergency" />

        <TextView
            android:id="@+id/emergencyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/emergencyImage"
            android:layout_alignParentRight="true"
            android:layout_marginRight="55dp"
            android:text="Emergency Services" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/sideMenu"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/bar"
        android:background="#007bff"
        android:visibility="gone">

        <ImageView
            android:id="@+id/closeSideMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            android:src="@drawable/ic_close" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/closeSideMenu"
            android:layout_centerHorizontal="true"
            android:src="@drawable/avatar1" />

        <LinearLayout
            android:id="@+id/navList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/profilePic"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_security"
                android:drawablePadding="10dp"
                android:text="My Profile"
                android:id="@+id/btnProfile"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/ic_recent_clipboard"
                android:drawablePadding="10dp"
                android:text="Recent Activities"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/ic_chat"
                android:drawablePadding="10dp"
                android:text="Messages"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/ic_help"
                android:drawablePadding="10dp"
                android:text="Help"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/ic_baseline_info_24"
                android:drawablePadding="10dp"
                android:text="About us"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/white" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/btnSignOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp">

            <ImageView
                android:id="@+id/signOutIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:layout_marginStart="20dp"
                android:scaleX="-1"
                android:src="@drawable/ic_login_logout" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/signOutIcon"
                android:text="Sign out"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>