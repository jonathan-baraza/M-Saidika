<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/matatuContainer">

    <ImageView
        android:id="@+id/image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/van2" />

    <TextView
        android:id="@+id/destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/image"
        android:text="Destination: Eldoret Town"
        android:textColor="@color/black" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Departure Time: 10:00 am"
        android:id="@+id/departureTime"
        android:textColor="@color/black"
        android:layout_below="@+id/destination"
        android:layout_toEndOf="@+id/image"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seats remaining: #5"
        android:id="@+id/capacity"
        android:layout_below="@+id/departureTime"
        android:layout_toEndOf="@+id/image"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fare price: Ksh 200/="
        android:id="@+id/price"
        android:layout_below="@+id/capacity"
        android:layout_toEndOf="@+id/image"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_baseline_delete_forever_24"
        android:drawableTint="@color/danger"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:id="@+id/btnDelete"
        android:visibility="gone"/>




</RelativeLayout>