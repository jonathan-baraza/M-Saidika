<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/avatar1"
        android:id="@+id/profilePic"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/profilePic"
        android:text="Jonathan Baraza"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/btnStartChat"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/btnCall"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_chat"
        android:background="@color/success"
        android:layout_marginEnd="10dp"
        android:padding="3dp"/>

    <ImageView
        android:id="@+id/btnCall"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@color/primary"
        android:padding="3dp"
        android:src="@drawable/ic_baseline_call_24_white"
        android:textAllCaps="false"
        android:textSize="12sp" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_centerVertical="true"
    android:id="@+id/adminButtons"
    android:visibility="gone">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDisable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@color/danger"
        android:drawableEnd="@drawable/ic_baseline_not_interested_24"
        android:drawablePadding="2dp"
        android:padding="3dp"
        android:text="Disable"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12sp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEnable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@color/success"
        android:drawableEnd="@drawable/ic_single_tick"
        android:drawablePadding="2dp"
        android:padding="3dp"
        android:text="Activate"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12sp"
        />

</LinearLayout>

</RelativeLayout>